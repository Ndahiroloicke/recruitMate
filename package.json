{
  "name": "recruitmate",
  "private": true,
  "scripts": {
    "dev": "pnpm -F @recruitmate/app dev",
    "dev:mobile": "pnpm -F @recruitmate/app dev:mobile",
    "start": "pnpm -F @recruitmate/app start",
    "build": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" NITRO_PRESET=cloudflare-pages nuxi build",
    "lint": "pnpm -F @recruitmate/app lint",
    "lint:fix": "pnpm -F @recruitmate/app lint:fix",
    "add:component": "pnpm -F @recruitmate/app add:component",
    "supabase:login": "pnpm supabase login",
    "supabase:start": "pnpm supabase start",
    "supabase:stop": "pnpm supabase stop",
    "supabase:db:start": "pnpm supabase db start",
    "supabase:db:pull": "pnpm supabase db pull",
    "supabase:db:push": "pnpm supabase db push",
    "supabase:db:reset": "pnpm supabase db reset",
    "supabase:db:migration:up": "pnpm supabase migration up",
    "supabase:db:migration:fetch": "pnpm supabase migration fetch",
    "supabase:types": "pnpm dlx supabase gen types typescript --local --schema public > app/server/types/supabase.ts",
    "android": "pnpm -F @recruitmate/app android",
    "ios": "pnpm -F @recruitmate/app ios",
    "cap:sync": "pnpm -F @recruitmate/app cap:sync",
    "cap:build": "pnpm -F @recruitmate/app cap:build",
    "cap:android": "pnpm -F @recruitmate/app cap:android",
    "cap:ios": "pnpm -F @recruitmate/app cap:ios",
    "cap:studio": "pnpm -F @recruitmate/app cap:studio",
    "cap:xcode": "pnpm -F @recruitmate/app cap:xcode"
  },
