    "@supabase/supabase-js": "^2.47.10",
    "@types/nanoid": "^3.0.0",
    "cross-env": "^7.0.3",
    "supabase": "^2.2.1",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@nuxt/image": "^1.8.1",
    "nanoid": "^5.0.9",
    "tailwindcss": "^3.4.17",
    "vue-sonner": "^1.3.0"
  },
  "packageManager": "pnpm@9.15.2+sha512.93e57b0126f0df74ce6bff29680394c0ba54ec47246b9cf321f0121d8d9bb03f750a705f24edc3c1180853afd7c2c3b94196d0a3d53d3e069d9e2793ef11f321"
